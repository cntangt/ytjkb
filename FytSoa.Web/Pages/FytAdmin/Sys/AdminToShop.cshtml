@page
@model AdminToShopModel
@{
    ViewData["Title"] = "为用户分配门店权限";
    Layout = "~/Pages/FytAdmin/_Layout.cshtml";
}
<style>
    .layui-table-view { margin-top: 0px; }

    .layui-col-220 { width: 200px; }

    .right-col-body { left: 200px; }

    .list-wall { padding-top: 0px; }

    .fyt-center { text-align: center; }

    #tree { height: 350px; overflow: auto; }

    .layui-layer-loading { box-shadow: 0 0px 0px rgba(0, 0, 0, .3) !important; }
</style>
<div class="list-wall" style="margin-top:15px;">
    <table class="layui-hide" id="tablist" lay-filter="tool"></table>
</div>
<script>
    layui.config({
        base: '/themes/js/modules/'
    }).use(['table', 'layer', 'jquery', 'common'],
        function () {
            var table = layui.table,
                layer = layui.layer,
                $ = layui.jquery,
                os = layui.common,
                form = layui.form;

            table.render({
                elem: '#tablist',
                headers: os.getToken(),
                url: '/api/admin/shops/?admin_guid=@Model.admin_guid',
                cols: [
                    [
                        { field: 'shop_name', title: '门店名称', sort: true, fixed: 'left' },
                        { width: 150, title: '操作', templet: '#tool',fixed:'left' }
                    ]
                ],
                id: 'tables'
            });

            var guid = '', typeName = '', active = {
                reload: function () {
                    table.reload('tables',
                        {
                            page: {
                                    curr: 1
                                }
                        });
                }
            };

            $('.list-search .layui-btn').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });

            //监听授权操作
            form.on('switch(torole)', function (obj) {
                var strRole = this.value;
                //开始提交信息
                var index = layer.load(1, {
                    shade: [0.1, '#fff']
                });
                os.ajax("api/rolemenu/torole", { }, function (res) {
                    layer.close(index);
                    if (res.statusCode === 200) {
                        if (obj.elem.checked) {
                            os.success('授权成功~');
                        }
                        else {
                            os.success('取消授权~');
                        }
                    } else {
                        os.error(res.message);
                    }
                });
            });
        });
</script>
<script type="text/html" id="tool">
    @*{{#  if(d.level === 1){ }}*@
    <input type="checkbox" name="is_power" lay-skin="switch" lay-text="取消|授权" lay-filter="torole" {{ d.is_power ? 'checked' : '' }}>
    @*{{#  } }}*@
</script>