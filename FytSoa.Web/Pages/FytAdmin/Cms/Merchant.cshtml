@page
@model MerchantModel
@{
    ViewData["Title"] = "子商户管理";
}
<div id="container">
    <div class="list-wall">
        <div class="layui-form list-search">
            <button type="button" class="layui-btn layui-btn-sm" data-type="toolAdd"><i class="layui-icon"></i> 新增</button>
            <button type="button" class="layui-btn layui-btn-sm" data-type="toolDel"><i class="layui-icon"></i> 删除</button>
            <form autocomplete="off" id="searchform" style="float:right">
                <div class="layui-inline">
                    <input class="layui-input" name="key" placeholder="输入商户名/电话/子商户号">
                </div>
                <button type="submit" class="layui-btn layui-btn-sm" data-type="toolSearch"><i class="layui-icon layui-icon-search"></i> 搜索</button>
            </form>
        </div>
        <table class="layui-hide" id="tablist" lay-filter="tool"></table>
    </div>
    <script type="text/html" id="tool">
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail"><i class="layui-icon">&#xe702;</i> 详情</a>
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="edit"><i class="layui-icon"></i> 修改</a>
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="sync"><i class="layui-icon">&#xe669;</i> 同步</a>
    </script>
</div>
@section scripts{
    <script>
        layui.config({
            base: '/themes/js/modules/'
        }).use(['table', 'layer', 'jquery', 'common'],
            function () {
                var table = layui.table,
                    layer = layui.layer,
                    $ = layui.jquery,
                    os = layui.common;
                table.render({
                    elem: '#tablist',
                    headers: os.getToken(),
                    url: '/api/merchant/getpages',
                    cols: [
                        [
                            { type: 'checkbox' },
                            { field: 'admin_name', title: '登录账号', width: 120 },
                            { field: 'name', title: '商户名称' },
                            { field: 'contact', title: '联系人' },
                            { field: 'tel', title: '联系电话', width: 120 },
                            //{ field: 'email', title: '电子邮箱' },
                            //{ field: 'appid', title: '公众号AppId' },
                            { field: 'agent_admin_name', title: '代理商', width: 120 },
                            { field: 'out_sub_mch_id', title: '商户子账号' },
                            //{ field: 'order_perfix', title: '订单前缀', width: 100 },
                            //{ field: 'authen_key', title: '认证密钥' },
                            { title: '微信', templet: '<s>{{ toper(d.wxpay) }}</s>', align: 'center', width: 70 },
                            { title: '支付宝', templet: '<s>{{ toper(d.alipay) }}</s>', align: 'center', width: 70 },
                            { title: '微(代)', templet: '<s>{{ toper(d.agent_wxpay) }}</s>', align: 'center', width: 70 },
                            { title: '支(代)', templet: '<s>{{ toper(d.agent_alipay) }}</s>', align: 'center', width: 70 },
                            { title: '状态', templet: tostatus, align: 'center', width: 60 },
                            { align: 'center', title: '创建时间', width: 160, templet: (d) => layui.util.toDateString(d.create_time, 'yyyy-MM-dd HH:mm:ss') },
                            { width: 240, title: '操作', templet: '#tool', align: 'center' }
                        ]
                    ],
                    page: true,
                    id: 'tables'
                });

                var active = {
                    reload: function () {
                        table.reload('tables',
                        {
                            page: {
                                curr: 1
                            },
                            where: $('#searchform').serializeArray().js()
                        });
                        return false;
                    },
                    toolAdd: function () {
                        os.Open('添加子商户信息', '/fytadmin/cms/merchantmodify', '720px', '640px', active.reload);
                    },
                    toolDel: function () {
                        var checkStatus = table.checkStatus('tables')
                            , data = checkStatus.data;
                        if (data.length === 0) {
                            os.error("请选择要删除的项目~");
                            return;
                        }
                        var str = '';
                        $.each(data, function (i, item) {
                            str += item.id + ",";
                        });
                        layer.confirm('确定要执行批量删除吗？', function (index) {
                            layer.close(index);
                            var loadindex = layer.load(1, {
                                shade: [0.1, '#000']
                            });
                            os.ajax('api/merchant/delete/', { parm: str }, function (res) {
                                layer.close(loadindex);
                                if (res.statusCode === 200) {
                                    active.reload();
                                    os.success('删除成功！');
                                } else {
                                    os.error(res.message);
                                }
                            });
                        });
                    }
                };
                $('#searchform').on('submit', active.reload);
                $('button[data-type]').on('click', (e) => active[$(e.target).data('type')].call(this));
                table.on('tool(tool)', function (obj) {
                    var id = obj.data.id;
                    switch (obj.event) {
                        case 'edit':
                            os.Open('修改子商户信息', '/fytadmin/cms/merchantmodify/?id=' + id, '720px', '640px', active.reload);
                            break;
                        case 'detail':
                            os.Open('查看子商户详情', '/fytadmin/cms/merchantdetail/?id=' + id, '720px', '640px');
                            break;
                        case 'sync':
                            layer.confirm('确定要同步门店信息', ['确定', '取消'], (i) => {
                                os.Open('同步商户门店信息', '/api/sync/shopinfo/?id=' + id, '720px', '640px');
                                layer.close(i);
                            }, null);
                            break;
                    }
                });
            });
    </script>
}