@using FytSoa.Common
@using FytSoa.Core.Model.Cms
@using Microsoft.Extensions.Caching.Distributed
@inject FytSoa.Service.Interfaces.ICmsSiteService ss
@inject IDistributedCache cache
@{
    Layout = string.IsNullOrEmpty(Context.Request.Query["__f"]) ? "_LayoutMain" : "_Layout";
    var site = await cache.GetAsync<CmsSite>(KeyHelper.NOWSITE, ss.DefaultAsync());
    ViewData["SiteName"] = site.SiteName;
    ViewBag.right = site.SiteCopyright;
    ViewBag.tel = site.SiteTel;
}
